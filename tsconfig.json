{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ESNext"],
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["react", "react-native"],
    "paths": {
      "@env": ["./env.d.ts"] 
    }
  },
  "include": ["src", "end.d.ts", "nativewind.d.ts", "declarations.d.ts"],
}
